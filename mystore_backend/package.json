{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "nodemon src/server.ts",
    "migrate": "db-migrate --env test up && db-migrate up",
    "migratedown": "db-migrate --env test --count 4 down && db-migrate --count 4 down",
    "tsc": "tsc",
    "clean": "rm -rf dist/ || true",
    "build": "npm run clean && tsc && cp package.json dist/package.json && cd dist && zip -r Archive.zip . && cd ..",
    "deploy": "npm run build && chmod +x ./bin/deploy.sh && ./bin/deploy.sh"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.12",
    "pg": "^8.5.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jasmine": "^3.7.7",
    "@types/pg": "^8.6.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
